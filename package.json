{
	"name": "read-book-status-bar",
	"displayName": "read-book-status-bar",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:read-book-status-bar.searchBook"

	],
	"contributes": {
		"commands": [
			{
				"command": "read-book-status-bar.searchBook",
				"title": "搜索书籍"
			}
		],
		"configuration": {
			"type": "object",
			"title": "状态栏读书",
			"properties": {
				"read-book-status-bar.index": {
					"type": "number",
					"default": 0,
					"description": "阅读到第几章"
				},
				"read-book-status-bar.type": {
					"type": "string",
					"enum": ["biquge"],
					"default": "biquge",
					"enumDescriptions": ["笔趣阁"]
				},
				"read-book-status-bar.speed": {
					"type": "number",
					"default": 5000,
					"description": "自动阅读速度默认5s"
				},
				"read-book-status-bar.name": {
					"type": "string",
					"default": "",
					"description": "启动时默认搜索书籍名称"
				}
			}
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.50.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.6.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"axios": "^0.20.0",
		"cheerio": "^1.0.0-rc.3",
		"iconv-lite": "^0.6.2"
	}
}
